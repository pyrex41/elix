          type: :image_pairs,
          status: :processing,
          parameters: %{test: "data"},
          progress: %{percentage: 75, stage: "finalizing"}
        })
        |> Repo.insert()

      # Complete the job
      result = "Final video data"
      Coordinator.complete_job(job.id, result)

      # Give it time to process
      Process.sleep(100)

      # Verify job is completed
