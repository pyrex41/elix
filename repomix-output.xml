      conn =
        conn
        |> put_req_header("range", "bytes=-5")
        |> get(~p"/api/v3/videos/#{job.id}/combined")

      assert conn.status == 206
      total_size = byte_size(@test_video_blob)
      start_pos = total_size - 5

      assert get_resp_header(conn, "content-range") == [
